{% extends 'base.html.twig' %}

{% block title %}ایجاد تیکت جدید{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href={{ asset('css/register.css')}}>

    <style>
        /*.field-browse{*/
        /*    font-size: 12pt;*/
        /*    text-align: right;*/

        /*}*/
    </style>
{% endblock %}


{% block body %}
    <section class="login-block" dir="rtl">
        <div class="container" style="background-color: #edf5ff">
            <div class=" login-sec " >
                <h2 class="text-center head-text">عضویت در سایت</h2>
                    <div class="row">
                        <div class="col-md-12  mx-0">
                                {{ form_start(ticketForm) }}
                                <div class="row" >
                                    <div class="col field-text">
                                        {{ form_row(ticketForm.productBrand) }}

                                    </div>
                                    <div class="col field-text">
                                        {{ form_row(ticketForm.productModel) }}

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col field-text">
                                        {{ form_row(ticketForm.problemSubject)}}
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col field-text ">
                                        {{ form_row(ticketForm.details) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col field-text">
                                        {{ form_row(ticketForm.imageFile) }}
                                    </div>
                                    <div class="col field-text">
                                        {{ form_row(ticketForm.reservedDate) }}
                                    </div>
                                </div>

                            <div class="form-check" style="text-align: center " dir="ltr">
                                <button type="submit" style="margin: 10px 480px 30px 0" class="btn btn-login float-right sign-in-but">ثبت &nbsp اطلاعات</button>
                            </div>
                            {{ form_end(ticketForm) }}
                        </div>
                    </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
{% endblock %}


