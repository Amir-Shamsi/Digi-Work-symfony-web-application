{% extends 'base.html.twig' %}

{% block title %}ورود{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href={{ asset('css/login.css')}}>
    <style>
        .lang-menu{
            font-family: Vazir, serif;
            font-size: 10pt;
            margin: -30px 0 25px;
        }
    </style>
{% endblock %}


{% block body %}

        <section class="login-block" dir="rtl">
            {% if error %}
               <div class="alert alert-danger error" >
                   <i class="fa fa-times-circle"></i>
                   {{ error.messageKey|trans(error.messageData, 'security') |trans([], null, lang) }}</div>
            {% endif %}
            {% block show_massege %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success error" style="width: 600px;margin-right: 460px;">
                        <i class="fa fa-check-circle"></i>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endblock %}

            <div class="container">
            <div class="row">
              <div class="col-md-4 login-sec">
                  <div class="lang-menu">
                      <a href="{{ path('app_login',{ '_locate': 'fa' }) }}">فارسی</a>
                      <a>|</a>
                      <a href="{{ path('app_login',{ '_locate': 'en' }) }}">English</a>
                  </div>
                    <h2 class="text-center head-text">{{ "ورود به حساب"|trans([], null, lang) }}
                    </h2>
                    <form class="login-form" method="post">

                      <div class="form-group field-text ">

                          <label for="inputUsername" >{{ "نام کاربری"|trans([], null, lang) }}</label>
                        <input
                                {% if error %}
                                        type="text" value="{{ last_username }}"
                                    {% else %}
                                        type="text" value=""

                                {% endif %}
                                placeholder="{{ "نام کاربری"|trans([], null, lang) }}"
                                name="username"
                                id="inputUsername"
                                class="form-control"
                                autocomplete="username"
                                required autofocus >
                      </div>

                      <div class="form-group field-text">
                        <label for="inputPassword">{{ "رمز عبور"|trans([], null, lang) }}</label>
                        <input
                                type="password"
                                 name="password"
                                id="inputPassword"
                                placeholder="{{ "رمز عبور"|trans([], null, lang) }}"
                                class="form-control"
                                autocomplete="current-password"
                                required >
                      </div>
                       <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="form-check">
                            <label class="form-check-label rem-check" dir="ltr" style="margin-left: 100px;">
                                <input type="checkbox" name="_remember_me"  class="form-check-input">
                                {{ "من را به خاطر داشته باش"|trans([], null, lang) }}
                            </label>
                            <button type="submit" style="    margin-right: 120px;" class="btn btn-login float-right sign-in-but">{{ "ورود به دیجی ورک"|trans }}</button>



                        </div>


                    </form>

                      <div class="copy-text"  style="font-weight: bold; font-size: 9pt">{{ "زندگی آسوده شعار ماست"|trans([], null, lang) }}<i class="fa fa-heart"></i></div>
                  </div>
                    <div class="col-md-8 banner-sec">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <img class="d-block img-fluid" src="{{ asset('asserts/image/login/slide2.jpg') }}" alt="First slide">
                                    <div class="carousel-caption d-none d-md-block" dir="rtl" style="text-align: right">
                                        <div class="banner-text"  style="background-color: rgba(197,234,255,0.81);
                                             border-radius:20px 20px 20px 20px;
                                             ">
                                            <h2  style="color: #000000; margin-right: 20px; margin-top: 10px">{{ "زندگی کن"|trans([], null, lang) }}</h2>
                                            <p style="color: #000000; font-size: 15pt; margin-right: 20px">
                                                {{ "با دیجی ورک با خیالی آسوده زندگی کنید و کار های فنی تخصصی خود را به ما بسپارید"|trans([], null, lang) }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block img-fluid" src="{{ asset('asserts/image/login/slide3.jpg') }}" alt="second slide">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h2  style="color: #000000">زندگی کن</h2>
                                        <p style="color: #000000; font-size: 15pt">
                                            با دیجی ورک با خیالی آسوده زندگی کنید و کار های فنی تخصصی خود را به ما بسپارید.
                                        </p>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block img-fluid" src="{{ asset('asserts/image/login/slide1.jpg') }}" alt="third slide">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h2  style="color: #000000">زندگی کن</h2>
                                        <p style="color: #000000; font-size: 15pt">
                                            با دیجی ورک با خیالی آسوده زندگی کنید و کار های فنی تخصصی خود را به ما بسپارید.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
          </div>
        </section>





{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
{% endblock %}


